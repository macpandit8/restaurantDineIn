<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_black">

    <TextView
        android:id="@+id/dialogTitleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/text_size_20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Dialog Title"/>

    <EditText
        android:id="@+id/dialogEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_25sp"
        android:padding="@dimen/margin_5dp"
        android:textColor="@color/white"
        android:textColorHint="@color/light_gray"
        android:maxLength="50"
        android:textStyle="bold"
        android:background="@drawable/all_border_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/dialogCancelBtn"
            style="@style/DIALOG_BUTTON_STYLE"
            android:layout_weight="0.5"
            android:textSize="@dimen/text_size_20sp"
            android:text="@string/cancel_caps"/>

        <Button
            android:id="@+id/dialogDoneBtn"
            style="@style/DIALOG_BUTTON_STYLE"
            android:layout_weight="0.5"
            android:textSize="@dimen/text_size_20sp"
            android:text="@string/done_caps"/>
    </LinearLayout>

</LinearLayout>

</RelativeLayout>