<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_black"
    android:padding="@dimen/margin_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:id="@+id/foodNameTV"
            style="@style/MENU_SCREEN_ORDERLIST_TEXTVIEW"
            android:layout_weight="0.7"
            android:text="Chicken Pakora"/>

        <TextView
            android:id="@+id/decreaseFoodCountTV"
            style="@style/MENU_SCREEN_ORDERLIST_TEXTVIEW"
            android:layout_weight="0.1"
            android:layout_marginHorizontal="@dimen/margin_5dp"
            android:textAlignment="center"
            android:text="-"
            android:background="@drawable/round_shape"/>

        <TextView
            android:id="@+id/foodCountTV"
            style="@style/MENU_SCREEN_ORDERLIST_TEXTVIEW"
            android:layout_weight="0.1"
            android:textAlignment="center"
            android:paddingHorizontal="@dimen/margin_10dp"
            android:inputType="number"
            android:background="@drawable/all_border_background"
            android:text="0"/>

        <TextView
            android:id="@+id/increaseFoodCountTV"
            style="@style/MENU_SCREEN_ORDERLIST_TEXTVIEW"
            android:layout_weight="0.1"
            android:layout_marginHorizontal="@dimen/margin_5dp"
            android:textAlignment="center"
            android:text="+"
            android:background="@drawable/round_shape"/>

    </LinearLayout>

</RelativeLayout>