<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MenuScreenTheme">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
    </style>

    <style name="ActionButtonStyle" parent="@android:style/Widget.Holo.Light.ActionButton">
        <item name="android:minWidth">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:maxWidth">40dp</item>
        <item name="android:width">40dp</item>
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/actionbar_black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Splash Screen -->

    <style name="SPLASH_SCREEN_BG" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/splash_screen_color</item>
    </style>

    <style name="SPLASH_LABEL_1">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@color/splash_screen_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>

    <style name="SPLASH_LABEL_2">
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/splash_screen_color</item>
        <item name="android:textSize">@dimen/text_size_30sp</item>
    </style>

    <!-- Tables Style -->

    <style name="COMMON_TABLE_MARGINS">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/margin_10dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="COMMON_LINEAR_LAYOUT">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:weightSum">1</item>
    </style>

    <style name="TABLE_NO">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Menu Screen Styles -->

    <style name="MENU_SCREEN_TEXTVIEW">
        <item name="android:background">@drawable/oval_shape</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_30dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MENU_SCREEN_LINEAR_LAYOUT">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/margin_30dp</item>
    </style>

    <style name="PRIMARY_BUTTON_STYLE">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_10dp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:background">@drawable/selector_primary_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_25sp</item>
    </style>

    <style name="ACTIONBAR_TEXTVIEW">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_25sp</item>
        <item name="android:gravity">left|center</item>
    </style>

    <style name="BLACK_BG_TEXTVIEW">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MENU_SCREEN_ORDERLIST_TEXTVIEW">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DIALOG_BUTTON_STYLE">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/selector_primary_button</item>
        <item name="android:layout_margin">@dimen/margin_5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
